[
    {
        "name": "image",
        "label": "Template image name",
        "description": "Openstack image name",
        "default": "CentOS7_with_root",
        "hidden": false,
        "immutable": false,
        "required": true,
        "secured": false,
        "type": "string",
        "regex": "^[A-Za-z0-9][A-Za-z0-9-._]{0,31}$"
    },
    {
        "name": "flavor",
        "label": "Image flavor",
        "description": "Openstack flavor name",
        "default": "icb_base",
        "hidden": false,
        "immutable": false,
        "required": true,
        "secured": false,
        "type": "string",
        "regex": "^[A-Za-z0-9][A-Za-z0-9-._]{0,31}$"
    },
    {
        "name": "pool",
        "label": "Floating IP pool name",
        "description": "Openstack floating IP pool to be used",
        "default": "public",
        "hidden": false,
        "immutable": false,
        "required": true,
        "secured": false,
        "type": "string"
    },
    {
        "name": "external_gateway",
        "label": "External gateway",
        "description": "Openstack network ID of the gateway",
        "default": "some cryptic id from Openstack",
        "hidden": false,
        "immutable": false,
        "required": true,
        "secured": false,
        "type": "string"
    },
    {
        "name": "ssh_user_name",
        "label": "User name used in provisioning",
        "description": "This template assumes root, other values not guaranteed to work",
        "default": "root",
        "hidden": false,
        "immutable": false,
        "required": true,
        "secured": false,
        "type": "string",
        "regex": "^[A-Za-z0-9][A-Za-z0-9-._]{0,31}$"
    },
    {
        "name": "user_public_key",
        "label": "User Public Key",
        "description": "User-provided public SSH key used to connect to the virtual machine; The provided key must be 'None' or the openSSH format key with optional comment",
        "default": "ssh-rsa ",
        "hidden": false,
        "immutable": false,
        "required": true,
        "secured": false,
        "type": "string",
        "regex": "^None$|^ssh-rsa AAAA[0-9A-Za-z+/]+[=]{0,3}( [^@]+@[^@]+| [^@]+){0,1}$"
    }
]